{
    "name": "my-cookery-2-backend",
    "description": "Backend for cookery book 2",
    "version": "1.0.1",
    "main": "server.js",
    "author": "Tomáš Filo",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "start:dev": "nodemon --files src/server.ts",
        "build": "npm run build:clean && npm run build:compile && npm run build:copyOpenapi",
        "build:clean": "del-cli dist",
        "build:compile": "tsc",
        "build:copyOpenapi": "cpy 'src/openapi.json' dist/ --flat",
        "tests": "npm run tests:clean && npm run tests:generateOpenapi && npm run tests:unit && npm run tests:integration",
        "tests:unit": "",
        "tests:integration": "ts-mocha 'src/tests/integration/**/*.ts' --timeout 300000 --exit",
        "tests:clean": "del-cli src/tests/openapi",
        "tests:generateOpenapi": "openapi-generator-plus -c openapi-generator-plus.yml && replace-in-file --configFile=replace-config.js",
        "lint": "eslint 'src/**'"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:tfilo/my-cookery-book-2-backend.git"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "luxon": "^3.2.1",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.9.0",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.28.0",
        "sequelize-typescript": "^2.1.5",
        "sharp": "^0.31.3",
        "swagger-ui-express": "^4.6.0",
        "uuid": "^9.0.0",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@openapi-generator-plus/typescript-fetch-node-client-generator": "^1.1.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/chai": "^4.3.4",
        "@types/chai-as-promised": "^7.1.5",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/luxon": "^3.2.0",
        "@types/mocha": "^10.0.1",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.18",
        "@types/pg": "^8.6.6",
        "@types/sequelize": "^4.28.14",
        "@types/sharp": "^0.31.1",
        "@types/sinon": "^10.0.13",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.0",
        "@types/validator": "^13.7.12",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "chai-exclude": "^2.1.0",
        "chai-http": "^4.3.0",
        "cpy-cli": "^4.2.0",
        "del-cli": "^5.0.0",
        "mocha": "^10.2.0",
        "nodemon": "^2.0.20",
        "openapi-generator-plus": "^2.3.3",
        "replace-in-file": "^6.3.5",
        "sinon": "^15.0.1",
        "testcontainers": "^9.1.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}