{
    "name": "my-cookery-2-backend",
    "description": "Backend for cookery book 2",
    "version": "1.1.0",
    "main": "server.js",
    "author": "Tomáš Filo",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "start:dev": "nodemon --files src/server.ts",
        "build": "npm run build:clean && npm run build:compile && npm run build:copyOpenapi",
        "build:clean": "del-cli dist",
        "build:compile": "tsc",
        "build:copyOpenapi": "cpy 'src/openapi.json' dist/ --flat && cpy 'src/openapi-internal.json' dist/ --flat",
        "tests": "npm run tests:clean && npm run tests:generateOpenapi && npm run tests:unit && npm run tests:integration",
        "tests:unit": "ts-mocha 'src/tests/unit/**/*.ts' --timeout 5000",
        "tests:integration": "ts-mocha 'src/tests/integration/**/*.ts' --timeout 300000 --exit",
        "tests:clean": "del-cli src/tests/openapi && del-cli src/tests/openapi-internal",
        "tests:generateOpenapi": "openapi-generator-plus -c openapi-config.yml && openapi-generator-plus -c openapi-internal-config.yml && replace-in-file --configFile=replace-config.js",
        "lint": "eslint 'src/**'"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:tfilo/my-cookery-book-2-backend.git"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "handlebars": "^4.7.7",
        "helmet": "^6.2.0",
        "jsonwebtoken": "^9.0.1",
        "luxon": "^3.3.0",
        "moment": "^2.29.4",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.3",
        "pg": "^8.11.1",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.32.1",
        "sequelize-typescript": "^2.1.5",
        "sharp": "^0.31.3",
        "swagger-ui-express": "^4.6.3",
        "uuid": "^9.0.0",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@openapi-generator-plus/typescript-fetch-node-client-generator": "^1.1.6",
        "@types/bcryptjs": "^2.4.2",
        "@types/chai": "^4.3.5",
        "@types/chai-as-promised": "^7.1.5",
        "@types/express": "^4.17.17",
        "@types/handlebars": "^4.1.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/luxon": "^3.3.0",
        "@types/maildev": "^0.0.4",
        "@types/mocha": "^10.0.1",
        "@types/moment": "^2.13.0",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.16.19",
        "@types/nodemailer": "^6.4.8",
        "@types/pg": "^8.10.2",
        "@types/sequelize": "^4.28.15",
        "@types/sharp": "^0.31.1",
        "@types/sinon": "^10.0.15",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.2",
        "@types/validator": "^13.7.17",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "chai-exclude": "^2.1.0",
        "chai-http": "^4.4.0",
        "cpy-cli": "^4.2.0",
        "del-cli": "^5.0.0",
        "maildev": "^2.0.5",
        "mocha": "^10.2.0",
        "nodemon": "^2.0.22",
        "openapi-generator-plus": "^2.6.0",
        "replace-in-file": "^6.3.5",
        "sinon": "^15.2.0",
        "testcontainers": "^9.9.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    }
}
