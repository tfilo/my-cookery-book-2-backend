{
    "name": "my-cookery-2-backend",
    "description": "Backend for cookery book 2",
    "version": "1.2.1",
    "main": "server.js",
    "author": "Tomáš Filo",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "start:dev": "nodemon --files src/server.ts",
        "build": "npm run build:clean && npm run build:compile && npm run build:copyOpenapi",
        "build:clean": "del-cli dist",
        "build:compile": "tsc",
        "build:copyOpenapi": "cpy 'src/openapi.json' dist/ --flat && cpy 'src/openapi-internal.json' dist/ --flat",
        "tests": "npm run tests:clean && npm run tests:generateOpenapi && npm run tests:unit && npm run tests:integration",
        "tests:unit": "ts-mocha 'src/tests/unit/**/*.ts' --timeout 5000",
        "tests:integration": "ts-mocha 'src/tests/integration/**/*.ts' --timeout 300000 --exit",
        "tests:clean": "del-cli src/tests/openapi && del-cli src/tests/openapi-internal",
        "tests:generateOpenapi": "openapi-generator-plus -c openapi-config.yml && openapi-generator-plus -c openapi-internal-config.yml",
        "lint": "eslint 'src/**/*.{js,ts}'",
        "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
        "prettier": "prettier 'src/**/*.{js,ts}' --check",
        "prettier:fix": "prettier 'src/**/*.{js,ts}' --write"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:tfilo/my-cookery-book-2-backend.git"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "body-parser": "^1.20.3",
        "dotenv": "^16.5.0",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "handlebars": "^4.7.8",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "luxon": "^3.6.1",
        "moment": "^2.30.1",
        "nodemailer": "^6.10.1",
        "pg": "^8.16.0",
        "reflect-metadata": "^0.2.2",
        "sequelize": "^6.37.7",
        "sequelize-typescript": "^2.1.6",
        "sharp": "^0.33.5",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "yup": "^1.6.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@openapi-generator-plus/typescript-fetch-node-client-generator": "^1.8.2",
        "@testcontainers/postgresql": "^10.28.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/chai": "^5.2.2",
        "@types/chai-as-promised": "^8.0.2",
        "@types/express": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/luxon": "^3.6.2",
        "@types/maildev": "^0.0.7",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.21",
        "@types/nodemailer": "^6.4.17",
        "@types/pg": "^8.15.2",
        "@types/sequelize": "^4.28.20",
        "@types/sinon": "^17.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "@types/validator": "^13.15.1",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "chai": "^5.2.0",
        "chai-as-promised": "^8.0.1",
        "chai-exclude": "^3.0.1",
        "chai-http": "^5.1.2",
        "cpy-cli": "^5.0.0",
        "del-cli": "^6.0.0",
        "eslint": "^9.27.0",
        "maildev": "^2.2.1",
        "mocha": "^11.5.0",
        "nodemon": "^3.1.10",
        "openapi-generator-plus": "^2.20.0",
        "prettier": "^3.5.3",
        "sinon": "^19.0.5",
        "testcontainers": "^10.28.0",
        "ts-mocha": "^11.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    }
}
